{% extends 'base.html.twig' %}

{% block title %}Bornes{% endblock %}

{% block body %}

<h1>Liste des bornes</h1>

<a class="btn btn-dark custom-color" data-toggle="collapse" href="#collapseForm" role="button" aria-expanded="false" aria-controls="collapseExample">Ajouter une borne</a>
<div class="form-create collapse" id="collapseForm">
    {{ form_start(form) }}
    <div class="form-row">
        <div class="form-group col-md-6">
            <div class="form-group col-md-12">{{ form_row(form.numero_serie, {'attr':{'class':'form-control'}}) }}</div>
            <div class="form-group col-md-12">{{ form_row(form.id_borne, {'attr':{'class':'form-control'}}) }}</div>
            <div class="form-group col-md-12">{{ form_row(form.ip_borne, {'attr':{'class':'form-control'}}) }}</div>
            <div class="form-group col-md-12">{{ form_row(form.date_installation, {'attr':{'class':'form-control'}}) }}</div>
            <div class="form-group col-md-12">{{ form_row(form.details, {'attr':{'class':'form-control'}}) }}</div>
            
        </div>
        <div class="form-group col-md-6">   
            <div class="form-group col-md-12">{{ form_row(form.numero_rue, {'attr':{'class':'form-control'}}) }}</div>
            <div class="form-group col-md-12">{{ form_row(form.nom_rue, {'attr':{'class':'form-control'}}) }}</div>           
            <div class="form-group col-md-12">{{ form_row(form.cp, {'attr':{'class':'form-control'}}) }}</div>                    
            <div class="form-group col-md-12">{{ form_row(form.ville, {'attr':{'class':'form-control'}}) }}</div>
            <div class="form-group col-md-12">{{ form_row(form.site, {'attr':{'class':'form-control'}}) }}</div>
            
        </div>
    </div>
    <button type="submit" class="btn btn-dark custom-color m-2">Enregistrer</button>
        <a href="{{ path('borne_index') }}" class="btn btn-dark custom-color m-2">Abandonner</a>
    {{ form_end(form) }}
</div>



<input type="text" value="rechercher">
<label for="tri">TRIER PAR</label>
<select name="tri" id="tri">
    <option value="DESC">Ordre décroissant</option>
    <option value="ASC">Ordre croissant</option>
</select>

<table class="table table-striped">
    <thead>
        <tr>
            <th scope="col">Numéro de série</th>
            <th scope="col">ID ecran</th>
            <th scope="col">Site</th>
            <th scope="col">Ville</th>
            <th scope="col">Date d'installation</th>
            <th scope="col">Publicité en cours</th>
            <th scope="col">Connexion</th>
            <th scope="col"></th>
        </tr>
    </thead>
    <tbody>

        <tr>
            <th scope="row">1234567890</th>
            <td>1234567890</td>
            <td>Mame</td>
            <td>Tours</td>
            <td>30/04/2020</td>
            <td>5</td>
            <td>ok</td>
            <td><a href="#">Détails</a></td>
        </tr>

    </tbody>
</table>

{% endblock %}
