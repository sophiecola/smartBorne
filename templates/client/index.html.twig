{% extends 'base.html.twig' %}

{% block title %}Clients{% endblock %}

{% block body %}

<h1>Clients</h1>

{% if app.user.role is same as('ROLE_ADMIN') %}
<a class="btn btn-dark custom-color" data-toggle="collapse" href="#collapseForm" role="button" aria-expanded="false" aria-controls="collapseExample">Ajouter un client</a>
<div class="collapse" id="collapseForm">
    {{ form_start(form) }}
    {{ form_widget(form) }}
    {{ form_end(form) }}
</div>
{% endif %}

<input type="text" value="rechercher">
<label for="tri">TRIER PAR</label>
<select name="tri" id="tri">
    <option value="DESC">Ordre décroissant</option>
    <option value="ASC">Ordre croissant</option>
</select>

<div class="container">

     <div class="container d-flex ">

        <div class=row>
            {% for client in clients %}
                <div class="card col-mx-4 m-1" style="width: 18rem;">
                    <div class="card-body">
                        <img class="card-img-top" src="#" alt="image de client">
                        <img class="card-img-top" src="#" alt="détail">
                        <h5 class="card-title">{{ client.mag_nom }}</h5>
                        <p class="card-text">Référent : Prénom Nom</p>
                        <div class="row">
                            <div class="col">{{ client.mag_telephone_referent }}</div>
                            <div class="col">{{ client.mag_mail_referent }}</div>
                        </div>
                    </div>
                    <div class="card-footer">
                        <p>Date-Début - Date-Fin</p>
                        <p>nb écran</p>
                        <p>nb campagne</p>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>
</div>

{% endblock %}
