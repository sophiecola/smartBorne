{% extends 'base.html.twig' %}

{% block title %}Création Campagne{% endblock %}

{% block body %}

<div class="container my-3 form-create">
<h3>Créer une campagne</h3>
{{ form_start(form) }}
            <div class="form-group">
                <label for="clients">Client</label>
                <div class="d-flex">
                    <select name="clients" id="clients">
                        {% for client in clients %}
                            <option value="{{ client.mag_uuid }}/{{ client.mag_nom}}">{{ client.mag_nom }}</option>
                        {% endfor %}
                    </select>
                </div>
            </div>
            <div class="form-row">
                <div class="form-group col-md-3">
                    {{ form_label(form.dateDebut, 'Date de début')}}
                    {{ form_widget(form.dateDebut) }}
                </div>
                <div class="form-group col-md-3"> 
                    {{ form_label(form.dateFin, 'Date de fin') }}
                    {{ form_widget(form.dateFin) }}
                </div>
                <div class="form-group col-md-6">
                    {{ form_label(form.media, 'Fichier multimédia') }}
                    {{ form_widget(form.media, {'attr':{'class':'form-control'}}) }}
                </div>
            </div>

            <div class="form-row">
                <div class="form-group col-md-4">
                    {{ form_label(form.dureeAffichage, "Durée d'Affichage") }}
                    {{ form_widget(form.dureeAffichage) }}
                </div>
                <div class="form-group col-md-4">
                     {{ form_label(form.diffusionDebut, "Plage de diffusion spécifique") }} 
                    <div class="form-row">
                            {{ form_row(form.diffusionDebut) }}
                            {{ form_row(form.diffusionFin) }}
                    </div>
                </div>
                <div class="form-group col-md-4">
                    {{ form_label(form.recurrence, 'Récurrence personnalisée') }}
                    <div class="d-flex justify-content-between"> 
                        {% for recurrenceCheckBox in form.recurrence %}
                            <div class="form-check p-0">
                                {{ form_widget(recurrenceCheckBox, {'attr':{'class':'form-check-input'}}) }}
                                {{ form_label(recurrenceCheckBox) }}
                            </div>
                        {% endfor %}
                    </div>
                </div>
            </div>
            <div class="form-row">
                <div class="form-group col-md-3">
                    {{ form_label(form.permission, 'Permission') }}
                    {{ form_widget(form.permission)}}
                </div>
                <div class="form-group col-md-3">
                    {{ form_label(form.couleur, 'Couleur sur le planning') }}
                    {{ form_widget(form.couleur) }}
                </div>
                <div class="form-group col-md-6">
                     {{ form_label(form.details, 'Détails supplémentaires') }}
                     {{ form_widget(form.details, {'attr':{'class':'w-100 h-100'}}) }}
                </div>
            </div>
    <button type="submit" class="btn btn-outline-light custom-color m-2">Enregistrer</button>
    <a href="{{ path('campagne_index') }}" class="btn btn-outline-light custom-color m-2">Abandonner</a>
{{ form_end(form) }}
</div>

{% endblock %}